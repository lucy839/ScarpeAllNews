<div class="modal fade modalNote" id="noteModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
 
            <div class="modal-header">
               
                <h4 class="modal-title">Notes for {{this.title}}</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                {{!-- if there are notes display --}}
                {{#if this.note}}
                {{#each this.note}}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p class="previousNotes"> {{this.body}}
                        <button type="button" class="btn btn-primary deleteNote" data-note-id={{this._id}}
                            data-article-id={{this.article}}>X</button></p>
                    </div>
                </div>
                {{/each}}
                {{!-- else display no articles --}}
                {{else}}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4>No notes for this article yet.</h4>
                    </div>
                </div>
                {{/if}}
                {{!-- form to put in note --}}
                <div class="form-group">
                    <textarea id="noteText{{this._id}}" class="form-control" rows="4" placeholder="Add New Note"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default saveNote" data-id={{this._id}}>Save Note</button>
            </div>
        </div>
    </div>